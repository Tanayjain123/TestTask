<div class="page-header">
    <h1>List of Project</h1>
</div>
<table class="table table-striped table-responsive table-hover ">
    <thead class="table-dark">
        <th>Project Name </th>
        <th>create task on project</th>
        <th colspan="2"></th>
    </thead>

    <% @project.each do |project|%>
        <tr>
            <td><%= project.project_name %></td>
            <td><%= link_to "Create task", new_project_task_path(project_id: project.id), method: :get %></td>
            <td><%= link_to "Edit Project", edit_project_path(id: project.id), method: :get %></td>
            <td><%= link_to "Delete Project", project_path(id: project.id),
                data: {
                turbo_method: :delete   }%>
            </td>
        </tr>
    <%end%>
</table>
